{
  "compilerOptions": {
    "target": "ES2020",
    "module": "ESNext",
    "moduleResolution": "Bundler",
    "strict": true,
    "noEmit": true,
    "allowJs": false,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true,
    "types": ["node", "vite/client"],
    "baseUrl": ".",
    "paths": {
      "@scenes/*": ["src/scenes/*"]
    }
  },
  "include": ["src"]
}
